<Window x:Class="Pixelator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixelator"
        mc:Ignorable="d"
        Title="Pixelator" Height="450" Width="800">
    <Grid>
        <Image x:Name="OriginalImage" HorizontalAlignment="Left" Height="190" Margin="70,40,0,0" VerticalAlignment="Top" Width="320"/>
        <Image x:Name="PixelatedImage" HorizontalAlignment="Left" Height="190" Margin="410,40,0,0" VerticalAlignment="Top" Width="320"/>
        <Button x:Name="OpenFileButton" Content="Open File" HorizontalAlignment="Left" Margin="70,332,0,0" VerticalAlignment="Top" Width="110" Height="40"/>
        <Button x:Name="ConvertButton" Content="Convert" HorizontalAlignment="Left" Margin="345,332,0,0" VerticalAlignment="Top" Width="110" Height="40"/>
        <Button x:Name="ExportButton" Content="Export" HorizontalAlignment="Left" Margin="620,332,0,0" VerticalAlignment="Top" Width="110" Height="40"/>

    </Grid>
</Window>
